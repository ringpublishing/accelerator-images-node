{
    "name": "@ringpublishing/accelerator-images",
    "version": "0.1.0",
    "description": "Client library for generating Ring Accelerator image transformation URLs",
    "main": "lib/index.js",
    "engines": {
        "node": "^18||^20"
    },
    "scripts": {
        "test": "jest --ci --coverage --verbose",
        "prepare": "npm run build",
        "docs": "exit 1",
        "docs:generate": "typedoc --out docs/html src/",
        "docs:generate:markdown": "typedoc --out docs/markdown --plugin typedoc-plugin-markdown src/",
        "docs:generate:rst": "npm run docs:generate:markdown && cd docs && make",
        "lint": "npm run lint:js",
        "lint:js": "eslint --ext .js,.jsx,.ts,.tsx src/ tests/",
        "lint:js:fix": "npm run lint:js -- --fix",
        "prebuild": "rimraf lib",
        "build": "tsc"
    },
    "license": "MIT",
    "devDependencies": {
        "@ringieraxelspringer/eslint-config": "^23.0.0",
        "@ringieraxelspringer/tsconfig": "^6.0.0",
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "@types/crypto-js": "^4.2.2",
        "jest": "^29.0.0",
        "rimraf": "^5.0.0",
        "ts-jest": "^29.0.0",
        "typedoc": "^0.25.0",
        "typedoc-plugin-markdown": "^3.17.1",
        "typescript": "~5.1.0"
    },
    "eslintConfig": {
        "extends": "@ringieraxelspringer/eslint-config",
        "env": {
            "jest": true
        }
    },
    "jest": {
        "preset": "ts-jest"
    },
    "dependencies": {
        "crypto-js": "^4.2.0",
        "msgpackr": "~1.10.1"
    }
}
